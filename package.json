{
	"name": "duo-app",
	"version": "1.0.0",
	"private": true,
	"description": "DUO App",
	"author": "FinBook Pte Ltd",
	"scripts": {
		"clean": "rimraf dist",
		"test": "jest",
		"tslint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts{,x} --fix",
		"start": "webpack-dev-server --config webpack.config.dev.js",
		"rebuild": "webpack --config webpack.config.kovan.js --json | webpack-bundle-size-analyzer",
		"rebuildDemo": "webpack --config webpack.config.demo.js --json | webpack-bundle-size-analyzer",
		"rebuildLive": "webpack --config webpack.config.prod.js --json | webpack-bundle-size-analyzer",
		"build": "npm run clean && npm run rebuild",
		"buildDemo": "npm run clean && npm run rebuildDemo",
		"buildLive": "npm run clean && npm run rebuildLive"
	},
	"jest": {
		"globals": {
			"__DEV__": false,
			"__KOVAN__": true
		},
		"moduleNameMapper": {
			"\\.(css|less|svg|png|jpg)$": "identity-obj-proxy"
		},
		"snapshotSerializers": [
			"<rootDir>/node_modules/enzyme-to-json/serializer"
		],
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"devDependencies": {
		"@types/d3": "^5.0.0",
		"@types/jest": "^23.3.2",
		"@types/lodash": "^4.14.116",
		"@types/react": "^16.4.14",
		"@types/react-dom": "^16.0.7",
		"@types/react-redux": "^5.0.7",
		"@types/react-responsive": "^3.0.2",
		"@types/react-router-dom": "^4.3.1",
		"@types/redux-logger": "^3.0.6",
		"@types/redux-mock-store": "1.0.0",
		"browserslist": "^4.1.1",
		"css-loader": "^1.0.0",
		"enzyme": "^3.6.0",
		"enzyme-adapter-react-16": "^1.5.0",
		"enzyme-to-json": "^3.3.4",
		"file-loader": "^2.0.0",
		"html-webpack-plugin": "^3.2.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^23.6.0",
		"mini-css-extract-plugin": "^0.4.3",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"pre-commit": "^1.2.2",
		"react-test-renderer": "^16.5.2",
		"redux-mock-store": "^1.5.3",
		"rimraf": "^2.6.2",
		"style-loader": "^0.23.0",
		"ts-jest": "^23.10.2",
		"ts-loader": "^5.2.1",
		"tslint": "^5.11.0",
		"tslint-loader": "^3.6.0",
		"tslint-react": "^3.6.0",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"url-loader": "^1.1.1",
		"webpack": "^4.20.2",
		"webpack-bundle-size-analyzer": "^2.7.0",
		"webpack-cli": "^3.1.1",
		"webpack-dev-server": "^3.1.9"
	},
	"dependencies": {
		"antd": "^3.9.3",
		"aws-sdk": "^2.323.0",
		"d3": "^5.7.0",
		"lodash": "^4.17.11",
		"moment": "^2.22.2",
		"react": "^16.5.2",
		"react-dom": "^16.5.2",
		"react-redux": "^5.0.7",
		"react-responsive": "^5.0.0",
		"react-router": "^4.3.1",
		"react-router-dom": "^4.3.1",
		"redux": "^4.0.0",
		"redux-logger": "^3.0.6",
		"redux-thunk": "^2.3.0",
		"styled-components": "^3.4.9",
		"typescript": "^3.0.3"
	}
}
