{
  "name": "duo-app",
  "version": "1.0.0",
  "private": true,
  "description": "DUO App",
  "author": "FinBook Pte Ltd",
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts{,x}'",
    "start": "webpack-dev-server --config webpack.config.dev.js",
    "prebuild": "rimraf dist",
    "build": "webpack --config webpack.config.prod.js --json | webpack-bundle-size-analyzer"
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "moduleNameMapper": {
      "\\.(css|less|svg|png|jpg)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/d3": "^5.0.0",
    "@types/react": "^16.3.11",
    "@types/react-dom": "^16.0.5",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "mini-css-extract-plugin": "^0.4.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "prop-types": "^15.6.1",
    "react-test-renderer": "^16.3.2",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.4",
    "ts-loader": "^4.3.0",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "d3": "^5.0.1",
    "file-loader": "^1.1.11",
    "immutable": "^3.8.2",
    "moment": "^2.22.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "typescript": "^2.8.1"
  }
}
